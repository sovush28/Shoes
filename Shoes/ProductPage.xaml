<Page x:Class="Shoes.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage"
      FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="380"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListView Name="ProductListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding ProductEntryBG}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="190"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0" Grid.RowSpan="7" Stretch="UniformToFill" Margin="10">
                            <Image.Source>
                                <Binding Path="PhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            icons/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <WrapPanel Grid.Column="1" >
                            <TextBlock Text="{Binding ProductCategory}"
                                       FontSize="16" FontWeight="Bold"
                                       />
                            <TextBlock Text=" | " FontWeight="Bold"
                                       FontSize="16"
                                       />
                            <TextBlock Text="{Binding ProductName}"
                                       FontSize="16" TextWrapping="Wrap" FontWeight="Bold"
                                       />
                        </WrapPanel>

                        <TextBlock FontSize="16" TextWrapping="Wrap"
                                   Grid.Row="1" Grid.Column="1">
                            <Run Text="Описание товара: "/>
                            <Run Text="{Binding ProductDescription}"/>
                        </TextBlock>

                        <TextBlock FontSize="16" TextWrapping="Wrap"
                                   Grid.Row="2" Grid.Column="1">
                            <Run Text="Производитель: "/>
                            <Run Text="{Binding ProductManufacturer}"/>
                        </TextBlock>

                        <TextBlock FontSize="16" TextWrapping="Wrap"
                                   Grid.Row="3" Grid.Column="1">
                            <Run Text="Поставщик: "/>
                            <Run Text="{Binding ProductSupplier}"/>
                        </TextBlock>
                        
                        <WrapPanel Grid.Row="4" Grid.Column="1">
                            <TextBlock Text="Цена: "
                                       FontSize="16" TextWrapping="Wrap"
                                       />
                            <TextBlock Text="{Binding OldPrice}"
                                       FontSize="16" TextWrapping="Wrap"
                                       TextDecorations="Strikethrough" Foreground="Red"
                                       />
                            <TextBlock Text=" " FontSize="16" />
                            <TextBlock Text="{Binding PriceWDiscount, StringFormat= {}{0} руб.}"
                                       FontSize="16" TextWrapping="Wrap"
                                       />
                        </WrapPanel>

                        <TextBlock FontSize="16" TextWrapping="Wrap"
                                   Grid.Row="5" Grid.Column="1">
                            <Run Text="Единица измерения: "/>
                            <Run Text="{Binding Unit}"/>
                        </TextBlock>

                        <TextBlock FontSize="16" TextWrapping="Wrap"
                                   Grid.Row="6" Grid.Column="1">
                            <Run Text="Количество на складе: "/>
                            <Run Text="{Binding QuantityInStock}"/>
                        </TextBlock>

                        <WrapPanel Grid.Column="2" Grid.RowSpan="7"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock Text="{Binding ProductDiscount}"
                                       FontSize="20"
                                       />
                            <TextBlock Text="%" FontSize="20"/>
                        </WrapPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
