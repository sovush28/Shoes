<Page x:Class="Shoes.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="LoginTB"
                 Margin="10" Width="200" Height="30" FontSize="20"
                 HorizontalAlignment="Center"/>
        <TextBox Name="Password"
                 Margin="10" HorizontalAlignment="Center"
                 Width="200" Height="30" FontSize="20"
                 Grid.Row="1"/>
        <Button Name="LoginBtn" Content="Войти"
                HorizontalAlignment="Center"
                Click="LoginBtn_Click"
                Grid.Row="2"/>
        <Button Name="LoginGuestBtn" Content="Войти как гость"
                HorizontalAlignment="Center"
                Click="LoginGuestBtn_Click"
                Grid.Row="3"/>
    </Grid>
</Page>
